#!/usr/bin/env node
var setup = {
        input: {
            ellipseComponent: "../core/component/ellipse.js",
            cheminDePointComponent: "../core/component/cheminDePoint.js",
            backEndRestApiHelper: "../core/utils/backEndRestApiUtils.js",
            pixelsHelper: "../core/utils/pixelsUtils.js",
            colorHelper: "../core/utils/colorUtils.js",
            componentDesigner: "../core/componentDesigner.js",
            personnageManga: "../scripts/personnageManga.js",
            maisonAvecCercleEtEllipse: "../scripts/maisonAvecCercleEtEllipse.js"
        },
        output: {
            "../lib/componentDesigner-core-min.js": function () {
                return minify(this.ellipseComponent 
                                    + this.cheminDePointComponent 
                                    + this.backEndRestApiHelper
                                    + this.pixelsHelper
                                    + this.colorHelper
                                    + this.componentDesigner);
            },
            "../lib/componentDesigner-core.js": function () {
                return this.ellipseComponent + "\n" +
                           this.cheminDePointComponent + "\n" +
                           this.backEndRestApiHelper + "\n" +
                           this.pixelsHelper + "\n" +
                           this.colorHelper + "\n" +
                           this.componentDesigner
            },
            "../lib/componentDesigner-scripts-min.js": function () {
                return minify(this.personnageManga + "\n" 
                        + this.maisonAvecCercleEtEllipse);
            },
            "../lib/componentDesigner-scripts.js": function () {
                return this.personnageManga + "\n" 
                        + this.maisonAvecCercleEtEllipse
                
            }
        }
    },
    ujs = require("../../../tp3-3/UglifyJS/uglify-js.js"),
    jsp = ujs.parser,
    pro = ujs.uglify,
    fs = require("fs"),
    rxdr = /\/\*\\[\s\S]+?\\\*\//g;

function minify(code) {
    return pro.gen_code(pro.ast_squeeze(pro.ast_mangle(jsp.parse(code))));
}

var files = {};
for (var file in setup.input) {
    files[file] = String(fs.readFileSync(setup.input[file], "utf8")).replace(rxdr, "");
}
for (file in setup.output) {
    (function (file) {
        fs.writeFile(file, setup.output[file].call(files), "utf8", function () {
            console.log("Saved to \033[32m" + file + "\033[0m\n");
        });
    })(file);
}